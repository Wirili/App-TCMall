<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/im_addressList_r"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/rt"
            />
        <TextView
            android:id="@+id/t_addressList_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/im_addressList_r"
            android:text="15815176115"/>
        <TextView
            android:id="@+id/t_addressList_truename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/t_addressList_tel"
            android:layout_alignParentLeft="true"
            android:text="收货人："/>
        <TextView
            android:id="@+id/t_addressList_address"
            android:layout_below="@id/t_addressList_truename"
            android:layout_toLeftOf="@id/im_addressList_r"
            android:layout_alignLeft="@id/t_addressList_truename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址："/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>
</LinearLayout>
